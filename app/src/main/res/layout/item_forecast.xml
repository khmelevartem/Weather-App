<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_forecast_item_width"
    android:layout_height="@dimen/item_forecast_item_width"
    android:backgroundTint="#00000000"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_big"
>
        <TextView
            android:id="@+id/part_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_middle"
            tools:text = "07:00"
            />

        <ImageView
            android:id="@+id/part_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/test_cloudy"
            />

        <TextView
            android:id="@+id/part_temp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_big"
            tools:text = "270"
            />

</LinearLayout>